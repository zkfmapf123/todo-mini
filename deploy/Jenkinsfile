pipeline {
    agent any

    string(name : "DOCKER_IMAGE", default : "demo", description : "docker image")
    string(name : "DOCKER_ENV", default: "dev", description : "docker env")
    string(name : "DOCKER_VERSION", default : "1.0.0", description : "docker tag")

    environment {
        REGION = "ap-northeast-2"
        ECR_REPOSITORY = ""
        ECR_DOCKER_NAME = ""
        ECR_DOCKER_TAG = ""
    }

    stages {
        stage("Build Docker Images") {
            steps {
                echo "${DOCKER_IMAGE}_${DOCKER_ENV}_${DOCKER_VERSION}"   
            }
        }

        stage("Run Test Code") {
            steps {
                echo "run test code"    
            }
        }

        stage("Push Docker Image") {
            steps {
                echo "push docker image"    
            }
        }

        stage("Alarm To Push Docker Image") {
            steps {
                echo "alarm to push docker images"    
            }
        }

        stage("Deploy Workload") {
            steps {
                echo "deploy workload"    
            }
        }
    }
}